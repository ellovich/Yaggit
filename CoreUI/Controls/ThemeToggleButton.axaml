                    <ToggleSwitch.OnContent>
                        <Svg Width="18" Height="18" Path="{x:Static assets:Icons.moon}" />
                    </ToggleSwitch.OnContent>
                    <ToggleSwitch.OffContent>
                        <Svg Width="18" Height="18" Path="{x:Static assets:Icons.sun}" />
                    </ToggleSwitch.OffContent>
                </ToggleSwitch>
            </ControlTemplate>
