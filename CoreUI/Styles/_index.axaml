<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ae="using:AvaloniaEdit"
    xmlns:assets="using:CoreUI.Assets"
    xmlns:eremexEditors="using:Eremex.AvaloniaUI.Controls.Editors"
    xmlns:trialwatermark="using:Eremex.AvaloniaUI.Controls.TrialWatermark"
    >

    <Design.PreviewWith>
        <Border Width="600" Margin="10">
            <StackPanel>

                <Form Classes="Filter">
                    <IconButton VerticalAlignment="Center" Classes="refresh" FormItem.NoLabel="True" />
                    <TextBox FormItem.IsRequired="True" FormItem.Label="Name" />
                    <TextBox FormItem.Label="Email" />
                    <TextBox FormItem.Label="Message" />
                    <ComboBox FormItem.Label="Message" />
                    <CheckBox VerticalAlignment="Center" FormItem.Label="Message" />
                </Form>
                <CheckBox Content="Value" />
                <Expander Header="ddd" IsExpanded="True" />

            </StackPanel>

        </Border>
    </Design.PreviewWith>

    <FluentTheme DensityStyle="Compact">
        <FluentTheme.Palettes>
            <ColorPaletteResources x:Key="Light" Accent="#4c62c9" RegionColor="#FFFFFF" />
            <ColorPaletteResources x:Key="Dark" Accent="#4c62c9" RegionColor="#2a323b" />
        </FluentTheme.Palettes>
    </FluentTheme>

    <Styles.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://CoreUI/Styles/MainSettings.axaml" />
            </ResourceDictionary.MergedDictionaries>

