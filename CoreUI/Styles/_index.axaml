    <Style Selector="IconButton.refresh">
        <Setter Property="HotKey" Value="F5" />
        <Setter Property="Padding" Value="5" />
        <Setter Property="SvgPath" Value="{x:Static assets:Icons.refresh}" />
    </Style>

    <Style Selector="CheckBox">
        <Setter Property="BorderBrush" Value="{DynamicResource Border}" />
    </Style>

