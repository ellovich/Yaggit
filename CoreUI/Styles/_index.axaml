    <!--  Borders  -->
    <Style Selector="Border.card">
        <Setter Property="CornerRadius" Value="7" />
        <Setter Property="Margin" Value="10" />
        <Setter Property="Padding" Value="15" />
        <Setter Property="Background" Value="{DynamicResource SecondColor}" />
        <Setter Property="BoxShadow" Value="0 0 15 -2 #111512" />
    </Style>
    <Style Selector="Border.transparent">
        <Setter Property="Padding" Value="20" />
        <Setter Property="Margin" Value="10" />
        <Setter Property="Background" Value="{DynamicResource TransparentColor}" />
        <Setter Property="BorderBrush" Value="{DynamicResource TransparentBorder}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="7" />
        <Setter Property="Height" Value="80" />
    </Style>


    <Style Selector="Form.Filter">
        <Style Selector="^ /template/ Border#PART_Border">
            <Setter Property="Background" Value="{DynamicResource ThirdColor}" />
            <Setter Property="BorderBrush" Value="{DynamicResource Border}" />
            <Setter Property="Padding" Value="4 1" />
            <Setter Property="CornerRadius" Value="{DynamicResource DefaultCornerRadius}" />
            <Setter Property="BorderThickness" Value="{DynamicResource DefaultBorderThickness}" />
        </Style>

        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <WrapPanel VerticalAlignment="Center" Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>

        <Style Selector="^> :is(Button)">
            <Setter Property="Background" Value="{DynamicResource FilterColor}" />
            <Setter Property="BorderBrush" Value="{DynamicResource Border}" />
            <Setter Property="Margin" Value="0 2 5 2" />

            <Setter Property="VerticalAlignment" Value="Center" />
            <Style Selector="^:pointerover">
                <Setter Property="Background" Value="{DynamicResource FilterColor}" />
            </Style>
            <Style Selector="^:pressed">
                <Setter Property="Background" Value="{DynamicResource FilterColor}" />
            </Style>
        </Style>

        <Style Selector="^> CheckBox">
            <Setter Property="MinHeight" Value="16" />
            <Setter Property="Height" Value="26" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0 -4 5 0" />
            <Setter Property="Padding" Value="-7 0 5 0" />
            <Setter Property="Background" Value="Transparent" />
        </Style>

        <Style Selector="^ FormItem:not(:no-label) /template/ Border#ItemBorder">
            <Setter Property="BorderBrush" Value="{DynamicResource Border}" />
            <!--<Setter Property="BorderThickness" Value="{DynamicResource DefaultBorderThickness}" />-->
            <Setter Property="BorderThickness" Value="0 0 1 0" />
            <Setter Property="Margin" Value="-2 0 5 0" />
            <Setter Property="Padding" Value="5 0 5 0" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <!--<Setter Property="CornerRadius" Value="{DynamicResource DefaultCornerRadius}" />-->
            <Style Selector="^ ContentPresenter" />
        </Style>
        <!--    -->
        <Style Selector="^ FormItem:no-label">
            <Setter Property="Margin" Value="0 0 2 0" />
        </Style>
    </Style>


    <!--  Чтение  -->
    <Style Selector="NumericUpDown[IsReadOnly=True]">
        <Setter Property="Background" Value="{DynamicResource TransparentColor}" />
        <Style Selector="^:pointerover /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="{DynamicResource TransparentColor}" />
        </Style>
        <Style Selector="^:focus /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="{DynamicResource TransparentColor}" />
        </Style>
    </Style>


    <Style Selector="GridSplitter">
        <Setter Property="Background" Value="{DynamicResource Border}" />
        <Setter Property="Foreground" Value="{DynamicResource Border}" />
        <Setter Property="Margin" Value="5" />
    </Style>

