    <Style Selector="Expander:down">
        <Setter Property="Background" Value="{DynamicResource TransparentColor}" />
        <Setter Property="Padding" Value="4" />
        <Setter Property="MinHeight" Value="28" />
        <Style Selector="^ /template/ ToggleButton#ExpanderHeader">
            <Setter Property="Background" Value="{DynamicResource SecondColor}" />
        </Style>
        <Style Selector="^ /template/ ToggleButton:pointerover /template/ Border">
            <Setter Property="Background" Value="{DynamicResource SecondColor}" />
        </Style>
    </Style>


    <Style Selector="ae|TextEditor">
        <Setter Property="FontFamily" Value="{StaticResource CodingFontFamily}" />
        <Setter Property="ShowLineNumbers" Value="True" />
    </Style>

    <Style Selector="Svg">
        <Setter Property="Width" Value="26" />
        <Setter Property="Height" Value="26" />
        <Setter Property="Css" Value="{DynamicResource SvgColor}" />
        <Style Selector="^:disabled">
            <Setter Property="Css" Value="{DynamicResource SvgColorDisabled}" />
        </Style>
        <Style Selector="^:pointerover">
            <Setter Property="Css" Value="{DynamicResource SvgColorHover}" />
        </Style>
    </Style>

    <Style Selector="AvroWindow[WindowState=Maximized]">
        <Setter Property="Padding" Value="5" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="CornerRadius" Value="0" />
    </Style>

