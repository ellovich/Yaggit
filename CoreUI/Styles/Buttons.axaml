        <!--  Lavender  -->
        <Style Selector=":is(Button).lavender">
            <Setter Property="Background" Value="{DynamicResource LavenderNormal}" />
            <Setter Property="BorderBrush" Value="{DynamicResource LavenderHover}" />
            <Style Selector="^:pointerover">
                <Setter Property="Background" Value="{DynamicResource LavenderHover}" />
