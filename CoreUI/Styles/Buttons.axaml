        </Style>

        <!--  Orange  -->
        <Style Selector=":is(Button).orange">
            <Setter Property="Background" Value="{DynamicResource OrangeNormal}" />
            <Setter Property="BorderBrush" Value="{DynamicResource OrangeHover}" />
            <Style Selector="^:pointerover">
                <Setter Property="Background" Value="{DynamicResource OrangeHover}" />
