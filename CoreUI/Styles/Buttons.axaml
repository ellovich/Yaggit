    <!--  Accent  -->
    <Style Selector=":is(Button).accent">
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.55" />
            </Transitions>
        </Setter>
        <Setter Property="Background" Value="{DynamicResource AccentColor}" />
        <Setter Property="BorderBrush" Value="{DynamicResource AccentGradient}" />
        <Style Selector="^:pointerover">
            <Setter Property="Background" Value="{DynamicResource AccentGradient}" />
        </Style>
        <Style Selector="^:pressed">
            <Setter Property="Background" Value="{DynamicResource AccentGradient}" />
        </Style>
        <Style Selector="^:disabled">
            <Setter Property="BorderBrush" Value="{DynamicResource Border}" />
            <Setter Property="Cursor" Value="Cross" />
        </Style>
    </Style>

    <!--  Bordered-Accent  -->
    <Style Selector=":is(Button).bordered-accent">
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="{DynamicResource AccentGradient}" />
        <Style Selector="^:pointerover">
            <Setter Property="Background" Value="{DynamicResource AccentGradient}" />
        </Style>
        <Style Selector="^:pressed">
            <Setter Property="Background" Value="{DynamicResource AccentGradient}" />
        </Style>
        <Style Selector="^:disabled">
            <Setter Property="BorderBrush" Value="{DynamicResource Border}" />
            <Setter Property="Cursor" Value="Cross" />
        </Style>
    </Style>

    <!--  Filter  -->
    <Style Selector=":is(Button).filter">
        <Setter Property="Background" Value="{DynamicResource FilterColor}" />
        <Setter Property="BorderBrush" Value="{DynamicResource FilterColor}" />
        <Style Selector="^:pointerover">
            <Setter Property="Background" Value="{DynamicResource FilterColor}" />
        </Style>
        <Style Selector="^:pressed">
            <Setter Property="Background" Value="{DynamicResource FilterColor}" />
        </Style>
    </Style>

    <!--  Colors  -->
    <Style>

        <!--  Red  -->
        <Style Selector=":is(Button).red">
            <Setter Property="Background" Value="{DynamicResource RedNormal}" />
            <Setter Property="BorderBrush" Value="{DynamicResource RedHover}" />
            <Style Selector="^:pointerover">
                <Setter Property="Background" Value="{DynamicResource RedHover}" />
