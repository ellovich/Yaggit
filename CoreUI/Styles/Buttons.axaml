<Styles xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:assets="using:CoreUI.Assets">
    <Design.PreviewWith>
        <StackPanel Spacing="5">
            <ThemeToggleButton />
            <AutoGrid
                ChildMargin="5"
                ColumnCount="2"
                RowCount="8"
                RowHeight="40"
                >
                <Button Content="Button" />
                <IconButton Content="IconButton" SvgPath="{x:Static assets:Icons.cogs}" />

                <Button Content="Button :disabled" IsEnabled="False" />
                <IconButton Content="IconButton :disabled" IsEnabled="False" SvgPath="{x:Static assets:Icons.cogs}" />

                <Button Classes="transparent" Content="Button.transparent" />
                <IconButton Classes="transparent" Content="IconButton.transparent" SvgPath="{x:Static assets:Icons.cogs}" />

                <Button Classes="bordered">Button.bordered</Button>
                <IconButton Classes="bordered" Content="IconButton.bordered" SvgPath="{x:Static assets:Icons.cogs}" />

                <Button Classes="accent">Button.accent</Button>
                <IconButton Classes="accent" Content="IconButton.accent" SvgPath="{x:Static assets:Icons.cogs}" />

                <Button Classes="bordered-accent">Button.bordered-accent</Button>
                <IconButton Classes="bordered-accent" Content="IconButton.bordered-accent" SvgPath="{x:Static assets:Icons.cogs}" />

                <Button Classes="close">Button.close</Button>
                <IconButton Classes="close" Content="IconButton.close" SvgPath="{x:Static assets:Icons.closeCircle}" />

                <Button Classes="filter">Button.filter</Button>

                <Button HorizontalAlignment="Stretch" Classes="google" />


                <IconButton Classes="filter" Content="IconButton.filter" SvgPath="{x:Static assets:Icons.cogs}" />
            </AutoGrid>
            <Expander HorizontalAlignment="Stretch" Header="Colorful buttons" IsExpanded="True">

                <AutoGrid
                    ChildMargin="5"
                    ColumnCount="2"
                    RowCount="10"
                    RowHeight="40"
                    >

                    <Button Classes="red">Button.red</Button>
                    <IconButton Classes="red" Content="IconButton.red" SvgPath="{x:Static assets:Icons.cogs}" />

                    <Button Classes="green">Button.green</Button>
                    <IconButton Classes="green" Content="IconButton.green" SvgPath="{x:Static assets:Icons.cogs}" />

                    <Button Classes="blue">Button.blue</Button>
                    <IconButton Classes="blue" Content="IconButton.blue" SvgPath="{x:Static assets:Icons.cogs}" />

                    <Button Classes="yellow">Button.yellow</Button>
                    <IconButton Classes="yellow" Content="IconButton.yellow" SvgPath="{x:Static assets:Icons.cogs}" />

                    <Button Classes="lime">Button.lime</Button>
                    <IconButton Classes="lime" Content="IconButton.lime" SvgPath="{x:Static assets:Icons.cogs}" />

                    <Button Classes="orange">Button.orange</Button>
                    <IconButton Classes="orange" Content="IconButton.orange" SvgPath="{x:Static assets:Icons.cogs}" />

                    <Button Classes="lavender">Button.lavender</Button>
                    <IconButton Classes="lavender" Content="IconButton.lavender" SvgPath="{x:Static assets:Icons.cogs}" />

                    <Button Classes="pink">Button.pink</Button>
                    <IconButton Classes="pink" Content="IconButton.pink" SvgPath="{x:Static assets:Icons.cogs}" />
                </AutoGrid>

            </Expander>
        </StackPanel>
    </Design.PreviewWith>

    <!--  Button fix  -->
    <Style Selector="Button">
        <Style Selector="^ /template/ ContentPresenter">
            <Setter Property="Background" Value="{Binding $parent[Button].Background}" />
        </Style>
        <Style Selector="^:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{Binding $parent[Button].Background}" />
        </Style>
        <Style Selector="^:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="{Binding $parent[Button].Background}" />
        </Style>
    </Style>

    <!--  Button Base  -->
    <Style Selector="Button">
        <Setter Property="CornerRadius" Value="{DynamicResource DefaultCornerRadius}" />
        <Setter Property="Background" Value="{DynamicResource TransparentColor}" />
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.15" />
            </Transitions>
        </Setter>
        <Style Selector="^:pointerover">
            <Setter Property="Background" Value="{DynamicResource TransparentColorHover}" />
        </Style>
        <Style Selector="^:pressed">
            <Setter Property="Background" Value="{DynamicResource TransparentColorSelected}" />
        </Style>

        <Style Selector="^:disabled">
            <Setter Property="Opacity" Value="0.5" />
            <Setter Property="Cursor" Value="No" />
        </Style>

    </Style>

    <!--  Transparent  -->
    <Style Selector=":is(Button).transparent">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Style Selector="^:pointerover">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="^:pressed">
            <Setter Property="Background" Value="Transparent" />
        </Style>
    </Style>

    <!--  Bordered  -->
    <Style Selector=":is(Button).bordered">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="{DynamicResource Border}" />
        <Setter Property="BorderThickness" Value="1" />
        <Style Selector="^:pointerover">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>
        <Style Selector="^:pressed">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>
    </Style>

    <Style Selector=":is(Button).close">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Style Selector="^:pointerover">
            <Setter Property="Background" Value="{DynamicResource RedHover}" />
        </Style>
        <Style Selector="^:pressed">
            <Setter Property="Background" Value="{DynamicResource RedSelected}" />
        </Style>
    </Style>

