<AvroView
xmlns="https://github.com/avaloniaui"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:assets="using:CoreUI.Assets"
xmlns:b="using:Views.Behaviors"
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
xmlns:i="using:Avalonia.Xaml.Interactivity"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
xmlns:vm="using:ViewModels.UI.Yaggit"
mc:Ignorable="d"
x:Class="Views.UI.Yaggit.YaggitMainView"
x:DataType="vm:VmYaggitMain"
d:DesignWidth="300"
d:DesignHeight="540"
>

	<Design.DataContext>
		<vm:VmYaggitMain />
	</Design.DataContext>

	<Grid RowDefinitions="Auto,3*,*">

		<ContentControl
		Grid.Row="0"
		Content="{Binding RepoSelector}"
		/>

		<Grid Grid.Row="1" ColumnDefinitions="250,*">

			<ContentControl
			Grid.Column="0"
			Content="{Binding Branches}"
			/>

			<ContentControl
			Grid.Column="1"
			Content="{Binding CommitHistory}"
			/>

		</Grid>

		<ContentControl
		Grid.Row="2"
		Content="{Binding Console}"
		/>

	</Grid>

</AvroView>